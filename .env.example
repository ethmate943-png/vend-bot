# GROQ (classification)
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
GROQ_MODEL=llama-3.1-8b-instant
GROQ_MODEL_SMART=llama-3.3-70b-versatile

# KIMI K2 via NVIDIA NIMs (replies + agents; free key at build.nvidia.com)
KIMI_API_KEY=nvapi_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
KIMI_BASE_URL=https://integrate.api.nvidia.com/v1
KIMI_MODEL=moonshotai/kimi-k2.5
# Longer replies (cancel, catalog, etc.). Default 600; max 2048.
# KIMI_REPLY_MAX_TOKENS=600

# PAYSTACK
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxx
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxx

# NEON (Serverless PostgreSQL)
DATABASE_URL=postgresql://user:password@ep-xxxx-xxxx.us-east-2.aws.neon.tech/vendbot?sslmode=require

# GOOGLE SHEETS
GOOGLE_SERVICE_ACCOUNT_EMAIL=vendbot@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nxxxxxx\n-----END RSA PRIVATE KEY-----

# APP
PORT=3000
NODE_ENV=development
# Payment callback = who sends the receipt. That server must have WhatsApp connected.
# Local: set CALLBACK_BASE_URL to your ngrok URL (e.g. https://abc.ngrok-free.app) so callback hits localhost and local WhatsApp sends receipt.
# Koyeb: set APP_URL to Koyeb domain and connect WhatsApp on Koyeb (/qr). Leave CALLBACK_BASE_URL unset to use APP_URL.
APP_URL=https://vendbot-yourname.koyeb.app
VENDBOT_NUMBER=2348012345678
ADMIN_WHATSAPP=2348012345678
# CALLBACK_BASE_URL=https://your-ngrok-url.ngrok-free.app
# Optional: require ?key=YOUR_SECRET to view /qr (e.g. QR_SECRET=mySecret â†’ use /qr?key=mySecret)
# QR_SECRET=

# ESCROW
ESCROW_HOLD_NEW_VENDOR_HOURS=72
ESCROW_HOLD_ESTABLISHED_HOURS=24
ESTABLISHED_VENDOR_MIN_TRANSACTIONS=20

# SAFETY
# Set to 1 or true to skip daily vendor transaction cap (for testing)
# DISABLE_VENDOR_CAP=1
VELOCITY_MAX_DAILY_MULTIPLIER=10
PAYMENT_LINK_EXPIRY_MINUTES=30
DISPUTE_WHATSAPP_NUMBER=2348000000000

# PRIVACY (we do not monitor or store user chats when enabled)
# Set to true/1 to avoid storing chat content in DB and logging message/reply text.
# PRIVACY_NO_CHAT_STORAGE=true
# PRIVACY_NO_CHAT_LOGS=true
